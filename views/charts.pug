doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title
  link(rel="stylesheet", href="./css/charts.css")
  link(rel='icon', href='https://www.iconpacks.net/icons/2/free-twitter-logo-icon-2429-thumb.png')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')

.wrapper
  .container.siteTitleContainer
    .titleContentContainer
      .row
        .col-4
          img(src='https://png.pngitem.com/pimgs/s/485-4852982_rocket-icon-transparent-background-clipart-png-download-transparent.png', alt='rocket-charts-logo', width='100%')
        .col-8
          br
          h1.mainTitle Rocket Charts
  .container.loginContainer
    h2 Summon Rocket Charts!
    form#summonChartsForm(method='post', onsubmit='getCharts();')
      select#selectCountry.form-select.form-select-lg.mb-3.mt-3(name='Country', aria-label='.form-select-lg example')
        option(value='US') US
        option(value='UK') UK
        option(value='AU') AU
      select#selectMarket.form-select.form-select-lg.mb-3.mt-3(name='Market')
        option(value='ios') Apple App Store
        option(value='android') Google Play Store
      select#selectType.form-select.form-select-lg.mb-3.mt-3(name='Type')
        option(value='games') Games
        option(value='apps') Apps
      select#timeThreshold.form-select.form-select-lg.mb-3.mt-3(name='TimeThreshold')
        option(value='3') last week
        option(value='0.5') last 15 days
        option(value='1') last month
        option(value='2') last 2 months
        option(value='3') last 3 months
        option(value='3') last 6 months
        option(value='3') last year
      input(type='number', name='limit', placeholder='Limit', required='')
      input(type='submit', value='Load Charts')
  .container.applicationsContainer
    
script(src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
